{{> menu}}

{{#each playlists}}
  <section class="ui inverted grey stacked segment">
    <h2 class="ui header">
      {{title}}
    </h2>
    <p> Total Duration: {{duration}} </p>
    <a href="/playlist/{{id}}" class="ui icon button">
      <i class="icon folder open"></i>
    </a>
    <a href="/dashboard/deleteplaylist/{{id}}" class="ui icon button">
      <i class="icon trash"></i>
    </a>
  </section>
{{/each}}

{{#each myResults}}
<section class="ui inverted grey segment">
  <h2 class="ui header">
    {{name}}
  </h2>
  <p><img  src="{{images.[0].url}}"></p>
</section>
{{/each}}